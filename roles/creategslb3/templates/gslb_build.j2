{
    "class": "ADC",
    "schemaVersion": "3.6.0",
    "id": "AS3-APPS-DC",

    "{{vs_name}}": {
        "class": "Tenant",
        "Application": {
            "class": "Application",
            "template": "generic",

{% for i in gslb %}
            "{{i.name}}": {
                "class": "GSLB_Domain",
                "domainName": "{{i.name}}",
                "resourceRecordType": "A",
                "lastResortPool": {
                    "use": "{{i.name}}.gtm.pl"
                },
                "lastResortPoolType": "A",
                "pools": [
                    {
                        "use": "{{i.name}}.gtm.pl"
                    }                  

                ]
            },
            "{{i.name}}.gtm.pl": {
                "class": "GSLB_Pool",
                "resourceRecordType": "A",
                "ttl": 0,
                "members": [
                    {
                        "server": {
                            "bigip": "/Common/bigip1.f5lab.local"
                        },
                        "virtualServer": "/webtop/{{i.name}}.vs"
                    }         

                ]
            }{% if not loop.last %},
{% endif %}{% endfor %}               
        }

    }
}  
